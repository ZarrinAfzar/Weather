@{
    ViewBag.PageTitle = "آلارم سنسورها";
}

<div class="row headerbox">
    <div class="col-sm-12">
        <div class="project-sort pull-left">
            <div class="project-sort-item">
                <div class="form-inline">
                    <div class="form-group m-l-5">
                        <label>انتخاب پروژه :</label>
                        <select id="SensorAlarmDetail_Project" asp-items="@ViewBag.ProjectList" class="form-control input-sm" style="width: 180px;margin: 3px 0 10px 0px;">
                            <option value="0" selected>تمام موارد</option>
                        </select>
                    </div>
                    <div class="form-group m-l-5">
                        <label>انتخاب ایستگاه :</label>
                        <select id="SensorAlarmDetail_Station" class="form-control input-sm" style="width: 180px;margin: 3px 0 10px 0px;">
                            <option value="0" selected>تمام موارد</option>
                        </select>
                    </div>
                    
                       
                    <div class="form-group m-l-5">
                        <label>انتخاب آلارم :</label>
                        <select id="SensorAlarmDetail_Alarm" class="form-control input-sm" style="width: 180px;margin: 3px 0 10px 0px;">
                            <option value="0" selected>تمام موارد</option>
                        </select>
                    </div>
                    <div class="form-group m-l-5">
                        @{
                            if (User.IsInRole("AdminiStratore") || User.IsInRole("NewSensorAlarmDetail"))
                            {
                                <button onclick="SensorAlarmDetail_Get(0,0,0,0)" class="btn btn-primary waves-effect waves-light m-r-5 m-b-10">ثبت پارامتر آلارم</button>
                            }
                        }
                       @*  <button onclick="SensorAlarmDetail_filter()" type="button" style="padding:4px 15px 2px 15px" class="btn btn-primary waves-effect  waves-light m-b-5"><i class="fa fa-filter"></i></button>*@
                    </div>
                </div>
            </div>
        </div><!-- end col-->
    </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card-box table-responsive">
                <h4 class="header-title m-t-0 m-b-30" id="SensorAlarmDetail_ListTitle">لیست آلارم سنسورها</h4>

                <div class="row" id="SensorAlarmDetail_List">

                </div>
            </div>
        </div><!-- end col -->
    </div>


    @section Scripts
        {
        <!-- Datatables-->
        <script src="~/plugins/datatables/jquery.dataTables.min.js"></script>
        <script src="~/plugins/datatables/dataTables.bootstrap.js"></script>
        <script src="~/plugins/datatables/dataTables.buttons.min.js"></script>
        <script src="~/plugins/datatables/buttons.bootstrap.min.js"></script>
        <script src="~/plugins/datatables/jszip.min.js"></script>
        <script src="~/plugins/datatables/pdfmake.min.js"></script>
        <script src="~/plugins/datatables/vfs_fonts.js"></script>
        <script src="~/plugins/datatables/buttons.html5.min.js"></script>
        <script src="~/plugins/datatables/buttons.print.min.js"></script>
        <script src="~/plugins/datatables/dataTables.fixedHeader.min.js"></script>
        <script src="~/plugins/datatables/dataTables.keyTable.min.js"></script>
        <script src="~/plugins/datatables/dataTables.responsive.min.js"></script>
        <script src="~/plugins/datatables/responsive.bootstrap.min.js"></script>
        <script src="~/plugins/datatables/dataTables.scroller.min.js"></script>

        <!-- Datatable init js -->
        <script src="~/pages/datatables.init.js"></script>
        <script src="~/MyScript/SensorAlarmDetail/SensorAlarmDetail.js"></script>

    }
