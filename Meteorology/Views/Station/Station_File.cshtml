 @model IEnumerable<StationFile>
<div class="custom-modal-text">
    <div class="row"> 
        <div class="form-horizontal">
            <input type="hidden" id="StationFile_Id" value="0" />
            <input type="hidden" id="StationFile_StationId" value="0" />
            <div class="form-group">
                <label class="col-sm-3 control-label" for="Title">عنوان :</label>
                <div class="col-sm-6">
                    <input type="text" id="Title" name="Title" class="form-control input-sm">
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-3 control-label" for="Description">توضیحات :</label>
                <div class="col-sm-6">
                    <textarea id="Description" name="Description" class="form-control" maxlength="100" rows="2" placeholder="متنی با 100 کارکتر"></textarea>
                </div>
            </div>
            <div class="form-group">
                <label for="file" class="custom-file-upload">
                    <i class="fa fa-cloud-upload"></i> انتخاب فایل برای آپلود
                </label>
                <input id="file" name="file" type="file" style="display: none;" />
            </div>
            <button onclick="StationFile_Save()" class="btn btn-icon waves-effect waves-light btn-success m-b-5"> <i class="zmdi zmdi-check" style="font-weight: bolder;"></i> </button>
            @*<button onclick="Custombox.close();" class="btn btn-icon waves-effect waves-light btn-danger m-b-5">  <i class="zmdi zmdi-close" style="font-weight: bolder;"></i> </button>*@
        </div>
    </div>
    <div class="row telListBox">
        <div class="col-md-12">
            <ul class="list-group" id="StationFileList">
                @{
                    foreach (var item in Model)
                    {
                        <li class="list-group-item" id="StationFileItem_@item.Id">
                            <span class="badge badge-primary telButton" onclick="StationFile_Get(@item.Id)"><i class="zmdi zmdi-edit"></i></span>
                            <span class="badge badge-primary telButton" onclick="StationFile_Delete(@item.Id)"><i class="zmdi zmdi-delete"></i></span>
                            <a href="~/StationFiles/@item.FileAddress" target="_blank" class="badge badge-primary telButton"><i class="zmdi zmdi-download"></i></a>
                            <b style="margin-bottom: 0px;text-align: right">
                                @item.Title
                            </b>
                            <p style="margin-bottom: 0px;text-align: right">
                                @item.Description
                            </p>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>