@model Weather.Data.ViewModel.StationSmsViewModel
<div class="custom-modal-text">
    <div class="row">
        <form class="form-horizontal" id="formBody_StationSmscharge">
            <input type="hidden" id="StationFile_Id" value="0" /> 
            <input type="hidden" id="ProjectSmsCount" value="@Model.ProjectSmsCount" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <b>پروژه :</b>
                        <p style="padding-right:10px;">@Model.ProjectName</p>
                    </div>
                    <div class="form-group">
                        <b>تعداد پیامک پروژه :</b>
                        <p style="padding-right:10px;">@Model.ProjectSmsCount عدد</p>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <b>ایستگاه :</b>
                        <p style="padding-right:10px;">@Model.StationName</p>
                    </div>
                    <div class="form-group">
                        <b>تعداد پیامک ایستگاه :</b>
                        <p style="padding-right:10px;">@Model.StationSmsCount عدد</p>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <input type="text" name="StationSmscharge" id="StationSmscharge" class="form-control input-sm" placeholder="شارژ پیامک">
            </div>

            <button type="submit" onclick="StationSmsUpdate(@Model.StationId)" class="btn btn-icon waves-effect waves-light btn-success m-b-5"> <i class="zmdi zmdi-check" style="font-weight: bolder;"></i> </button>
           @* <button onclick="Custombox.close();" class="btn btn-icon waves-effect waves-light btn-danger m-b-5">  <i class="zmdi zmdi-close" style="font-weight: bolder;"></i> </button>*@
        </form>
    </div>
</div>