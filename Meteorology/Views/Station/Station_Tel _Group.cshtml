@model IEnumerable<StationTel>

<div class="custom-modal-text">
    <div class="row"> 
        <form id="formbody_StationTel" class="form-horizontal">
            <div class="form-group">
                <input type="hidden" id="StationTel_Id" value="0" />
                <input type="hidden" id="StationTel_StationId" value="0" />
                <label class="col-sm-3 control-label" for="StationTel_Name">نام گروه:</label>
                <div class="col-sm-6">
                    <input type="text" name="StationTel_Name" id="StationTel_Name" class="form-control input-sm">
                </div>
            </div> 
            <div class="form-group">
                <label class="col-sm-3 control-label" for="StationTel_LastName">نام خانوادگی :</label>
                <div class="col-sm-6">
                    <input type="text"  name="StationTel_LastName" id="StationTel_LastName"   class="form-control input-sm">
                </div>
            </div> 
            <div class="form-group">
                <label class="col-sm-3 control-label" for="StationTel_Tel">تلفن :</label>
                <div class="col-sm-6">
                    <input type="text" name="StationTel_Tel" id="StationTel_Tel"  class="form-control input-sm">
                </div>
            </div>
            <button type="submit" class="btn btn-icon waves-effect waves-light btn-success m-b-5" onclick="StationTel_Save();"> <i class="zmdi zmdi-check" style="font-weight: bolder;"></i> </button>
           @* <button class="btn btn-icon waves-effect waves-light btn-danger m-b-5" onclick="Custombox.close();">  <i class="zmdi zmdi-close" style="font-weight: bolder;"></i> </button>*@
        </form>
    </div>
    <div class="row telListBox">
        <div class="col-md-12">
            <ul class="list-group" id="StationTelList">
                @{
                    foreach (var item in Model)
                    {
                        <li class="list-group-item" id="StationTelItem_@item.Id">
                            <span class="badge badge-primary telButton" onclick="StationTel_Get(@item.Id)"><i class="zmdi zmdi-edit"></i></span>
                            <span class="badge badge-primary telButton" onclick="StationTel_Delete(@item.Id)"><i class="zmdi zmdi-delete "></i></span>
                            <p  id="StationTelItemName_@item.Id" style="margin-bottom: 0px;text-align: right">
                                <b>@item.Name @item.LastName</b>
                                <text class="text-primary">تلفن : @item.Tel</text>
                            </p>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>