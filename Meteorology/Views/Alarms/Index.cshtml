@{
    ViewBag.PageTitle = "تعریف کلیات آلارم";
}
<div class="row headerbox">
    <div class="col-sm-2">
        @{
            if (User.IsInRole("AdminiStratore") || User.IsInRole("NewAlarms"))
            {
                <button onclick="Alarms_Get(0)" class="btn btn-primary waves-effect waves-light m-r-5 m-b-10">آلارم جدید</button>
            }
        }

    </div>
    <div class="col-sm-10">
        <div class="project-sort">
            <div class="project-sort-item">
                <div class="form-inline pull-right">
                    <div class="form-group">
                        
                        <label>فیلتر براساس پروژه :</label>
                        <select id="Alarms_Project" asp-items="@ViewBag.ProjectList" class="form-control input-sm" style="width: 250px;margin: 3px 0 10px 10px;">
                            <option selected value="0">تمام موارد</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label> ایستگاه :</label>
                        <select id="Alarms_Station" class="form-control input-sm" style="width: 250px;margin: 3px 0 10px 10px;">
                            <option selected value="0">تمام موارد</option>
                        </select>
                    </div>
                  @*  <button onclick="Alarms_filter()" type="button" style="padding:4px 15px 2px 15px" class="btn btn-primary waves-effect  waves-light m-b-5"><i class="fa fa-filter"></i></button>*@
                </div>
            </div>
        </div>
    </div><!-- end col-->
</div>
<div class="row" id="Alarms_List">

</div>
 

@section Scripts
    {
    <script src="~/MyScript/Alarms/Alarms.js"></script>
 
}
