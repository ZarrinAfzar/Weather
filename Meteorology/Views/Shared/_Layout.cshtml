    <script>

        $('[data-toggle="tooltip"]').tooltip();
        function messageBox(type, text) {
            toastr.options = {
                "closeButton": false,
                "debug": false,
                "newestOnTop": false,
                "progressBar": false,
                "positionClass": "toast-bottom-left",
                "preventDuplicates": false,
                "onclick": null,
                "showDuration": "300",
                "hideDuration": "1000",
                "timeOut": "5000",
                "extendedTimeOut": "1000",
                "showEasing": "swing",
                "hideEasing": "linear",
                "showMethod": "slideDown",
                "hideMethod": "slideUp"
            }
            if (type === "success") {
                toastr.success(text, 'پیغام سیستم')
            } else if (type === "error") {
                toastr.error(text, 'خطا!')
            }
            else if (type === "info") {
                toastr.info(text)
            }
        }
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
                $.ajax({
                    url: "/Notification/NotificationPartial/",
                    type: "Get",
                    cache: false,
                    dataType: "Html",
                    data: { userId: @user.Id },
                    success: function (result) {
                                             $("#NotificationModel").html(result);
                    }
                });

            $.ajax({
                    url: "/Notification/NotificationCount/",
                    type: "Get",
                    cache: false,
                    dataType: "Html",
                    data: { userId: @user.Id },
                success: function (result) {
                    $("#NotificationCount").text(result);
                                          }

            });
            $(".listPreLoader").hide();
        });
