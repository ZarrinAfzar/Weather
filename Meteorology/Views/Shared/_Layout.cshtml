        function Logout(e){
            event.preventDefault();
            swal({ title: "خروج از سیستم", text: "از سیستم خارج می شوید؟", type: "info", showCancelButton: true, confirmButtonClass: 'btn-danger waves-effect waves-light', confirmButtonText: "بله" }, function (result) {
                if (result) {
                    window.location = $(e).attr('href');
                } else { messageBox("info", "از سیستم خارج نشده اید"); return false; }
            });
        }
    </script>
