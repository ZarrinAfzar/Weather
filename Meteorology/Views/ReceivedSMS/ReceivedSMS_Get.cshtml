@model ReceivedSMS

<form id="formBody_ReceivedSMS" role="form">
    <div class="custom-modal-text">
        <div class="row">
            <div class="form-horizontal">

                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="StationName">نام ایستگاه :</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="StationName" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="DatePrs">تاریخ :</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="DatePrs" class="form-control input-sm datepicker"
                               style="width: 180px; margin: 3px 0 10px 10px;"
                               placeholder="تاریخ دریافت پیامک" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="Type">نوع پیامک :</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="Type" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="Value">مقدار :</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="Value" class="form-control input-sm" />
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" for="Description">توضیحات :</label>
                    <div class="col-sm-6">
                        <textarea asp-for="Description" class="form-control input-sm"></textarea>
                    </div>
                </div>

                <button type="button" class="btn btn-icon waves-effect waves-light btn-success m-b-5"
                        onclick="ReceivedSMS_Save();">
                    <i class="zmdi zmdi-check" style="font-weight: bolder;"></i>
                </button>
            </div>
        </div>
    </div>
</form>
