@using Weather.Data.Base
@model Weather.Data.ViewModel.UserViewModel
@{
    ViewBag.PageTitle = "پروفایل کاربر";
}
<div class="row">
    <div class="col-md-8">
        <div class="card-box task-detail" style="height: 670px;">
            <div class="row">
                <form asp-action="Profile" method="post" enctype="multipart/form-data" class="col-md-12">
                    <h4 class="header-title m-t-0 m-b-30 text-primary ">اطلاعات کاربری </h4>
                    <div class="row">
                        <div class="col-md-5">
                            <div class="form">
                                <input type="hidden" asp-for="@Model.User.Id" value="@Model.User.Id" />
                                <div class="form-group">
                                    <label for="exampleInputEmail1">نام</label>
                                    <input asp-for="@Model.User.Name" type="text" class="form-control input-sm" placeholder="نام را وارد تکمیل نکردید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">نام کاربری</label>
                                    @{
                                        if (User.IsInRole("AdminiStratore"))
                                        {
                                            <input asp-for="@Model.User.UserName" type="text" class="form-control input-sm" placeholder="نام کاربری را وارد تکمیل نکردید">
                                        }
                                        else
                                        {
                                            <input asp-for="@Model.User.UserName" type="text" readonly="readonly" class="form-control input-sm">
                                        }
                                    }
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">پست الکترونیکی</label>
                                    <input asp-for="@Model.User.Email" type="email" class="form-control input-sm" placeholder="پست الکترونیکی را وارد تکمیل نکردید">
                                    <span asp-validation-for="@Model.User.Email" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">تلفن همراه</label>
                                    <input asp-for="@Model.User.PhoneNumber" type="text" class="form-control input-sm" placeholder="تلفن را وارد تکمیل نکردید">
                                    <span asp-validation-for="@Model.User.PhoneNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">استان</label>
                                    <select asp-items="@ViewBag.StatectList" asp-for="@Model.User.City.StateId" class="form-control input-sm" id="Statedrp"></select>
                                </div>

                            </div>
                        </div>
                        <div class="col-md-5">
                            <div class="form">
                                <div class="form-group">
                                    <label for="exampleInputEmail1">نام خانواندگی</label>
                                    <input asp-for="@Model.User.LastName" type="text" class="form-control input-sm" placeholder="نام خانواندگی را وارد تکمیل نکردید">
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">رمز عبور</label>
                                    <input asp-for="@Model.User.PasswordHash" type="password" class="form-control input-sm" placeholder="********">
                                    <span asp-validation-for="@Model.User.PasswordHash" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">تکرار رمز عبور</label>
                                    <input asp-for="@Model.User.ConfirmPassword" type="password" class="form-control input-sm" placeholder="********">
                                    <span asp-validation-for="@Model.User.ConfirmPassword" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">کد فعالسازی</label>
                                    @{
                                        if (User.IsInRole("AdminiStratore"))
                                        {
                                            <p style="margin-top: 8px;color: forestgreen;">شما مدیر هستید و به صورت پیشفرض حساب شما فعال است</p>
                                        }
                                        else
                                        {
                                            if (!Model.User.Registered)
                                            {
                                                <p style="margin-top: 8px;color: red;">حساب کاربری شما فعال نشده و به سیستم دسترسی ندارید</p>
                                            }
                                            else
                                            {
                                                <p style="margin-top: 8px;color: forestgreen;">حساب کاربری شما فعال شد</p>
                                            }

                                        }
                                    }
                                </div>
                                <div class="form-group">
                                    <label for="exampleInputEmail1">شهر</label>
                                    <select asp-for="@Model.User.CityId" asp-items="@ViewBag.CityList" class="form-control input-sm" id="CityId" name="CityId"></select>
                                </div>

                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <h4 class="header-title m-t-0 m-b-10 text-primary">تصویر پروفایل </h4>
                            <input type="file" name="Image" class="dropify" data-default-file="@Model.User.ImagePath" />
                        </div>
                        <div class="col-md-8">
                            <h4>پروژه ها:</h4>
                            @{
                                if (User.IsInRole("AdminiStratore"))
                                {
                                    <b style="margin-top: 8px;color: forestgreen;">مدیر به تمام پروژه ها دسترسی دارد</b>
                                }
                                else
                                {
                                    if (Model.ProjectList.Count > 0)
                                    {
                                        <div class="">
                                            @{
                                                foreach (var item in Model.ProjectList)
                                                {
                                                    <span class="label label-primary">@item</span>
                                                }
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <b style="margin-top: 8px;color: orangered;">شما به هیچ پروژه ای دسترسی ندارید</b>
                                    }
                                }
                            }

                            <h4>ایستگاه ها:</h4>
                            @{
                                if (User.IsInRole("AdminiStratore"))
                                {
                                    <b style="float:right;color: forestgreen;">مدیر به تمام ایستگاه ها دسترسی دارد</b>
                                }
                                else
                                {
                                    if (Model.StationList.Count > 0)
                                    {
                                        <div class="">
                                            @{
                                                foreach (var item in Model.StationList)
                                                {
                                                    <span class="label label-default">@item</span>
                                                }
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <b style="float: right;color: orangered;"> شما به هیچ ایستگاهی دسترسی ندارید </b>
                                    }
                                }
                            }
                            <button type="submit" style="width:150px;float:right;clear:right" class="btn btn-block btn-sm btn-success waves-effect waves-light m-t-15">تایید</button>
                            @*@{
                                if (!Model.User.Registered)
                                {
                                    <button type="button" onclick="User_Regisiter(@Model.User.Id)" style="width:150px;float:right;clear:right" class="btn btn-block btn-sm btn-danger waves-effect waves-light m-t-15">فعال سازی حساب</button>
                                }
                            }*@


                        </div>
                    </div>

                </form>

            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card-box" style="height: 670px;">
            <h4>اخرین فعالیت های شما</h4>
            <div class="litelCardBox" style="height: 600px;max-height:600px">
                <ul class="list-group">
                    @{
                        foreach (var item in Model.UserActionList)
                        {
                            <li class="list-group-item">
                                <span class="badge badge-primary">@item.InsertDate.ToPeString("dddd - dd MMMM - yyyy HH:mm:ss")</span>
                                @($"{item.ActionType.GetDisplayName()} {item.EntityName}")
                            </li>
                        }
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script src="~/MyScript/Profile/Profile.js"></script>
}