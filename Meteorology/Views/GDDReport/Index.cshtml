@{
    ViewBag.PageTitle = "گزارش نیاز گرمایی";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card-box table-responsive m-b-10">
            <div class="project-sort pull-left">
                <div class="project-sort-item">
                    <div class="form-inline">
                        <div class="form-group">
                            <label>انتخاب پروژه :</label>
                            <select id="GDDReport_Project" asp-items="@ViewBag.ProjectList" class="form-control input-sm" style="width: 180px;margin: 3px 0 10px 10px;">
                                <option selected>--- پروژه ---</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>انتخاب ایستگاه :</label>
                            <select id="GDDReport_Station" class="form-control input-sm" style="width: 180px;margin: 3px 0 10px 10px;">
                                <option selected>--- ایستگاه ---</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-sm datepicker" id="FromDate" name="FromDate" style="width: 180px;margin: 3px 0 10px 10px;" placeholder="تاریخ و ساعت شروع گزارش">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control input-sm datepicker" id="ToDate" name="ToDate" style="width: 180px;margin: 3px 0 10px 10px;" placeholder="تاریخ و ساعت پایان گزارش">
                        </div>
                        <div class="form-group">
                            حداقل دما :
                            <input type="text" id="Min" name="Min" class="form-control input-sm">
                        </div>
                        <div class="form-group">
                            حداکثر دما :
                            <input type="text" id="Max" name="Max" class="form-control input-sm">
                        </div>
                        <div class="form-group m-b-10">
                            <label style="margin:4px;"> نوع محاسبه :</label>
                            <div style="float: left;border: 1px solid #e3e3e3;border-radius: 3px;">
                                <div class="radio radio-success" style="margin-right: 10px;width: 150px;">
                                    <input type="radio" name="DDType" id="AllData" value="AllData" checked="">
                                    <label for="AllData"> میانگین آماری </label>
                                </div>
                                <div class="radio radio-success" style="margin-right: 10px;width: 150px;">
                                    <input type="radio" name="DDType" id="Day" value="Day">
                                    <label for="Day"> کمینه و بیشینه روزانه </label>
                                </div>

                            </div>
                        </div>
                        <div class="form-group  m-l-10 ">
                            <button onclick="GDDReport_filter()" type="button" style="padding:4px 0 2px 0px" class="btn btn-primary waves-effect w-md waves-light m-b-5">گزارش </button>
                            <button onclick="ExportToExcel()" type="button" style="padding:4px 0 2px 0px" class="btn btn-primary waves-effect w-md waves-light m-b-5 export">خروجی excel</button>
                        </div>
                    </div>
            </div>
        </div>
    </div><!-- end col-->
</div>
<div class="row">
    <div class="col-sm-12">
        <div class="card-box  table-responsive">
            <div class="row col-sm-6" id="GDDReport_List">

            </div>

        </div>

    </div><!-- end col -->
</div>


@section Scripts
    {
    <script src="~/MyScript/GDDReport/GDDReport.js"></script>
}