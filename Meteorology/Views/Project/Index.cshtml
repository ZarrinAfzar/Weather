@{
    ViewBag.PageTitle = "پروژه ها";
}

<div class="row headerbox">

    <div class="col-sm-2">
        @{
            if (User.IsInRole("AdminiStratore") || User.IsInRole("ProjectNew"))
            {
                <button onclick="New()" class="btn btn-primary waves-effect waves-light m-r-5 m-b-10">پروژه جدید</button>
            }
        }
    </div>
    <div class="col-sm-10">
        <div class="project-sort pull-right">
            <div class="project-sort-item">
                <div class="form-inline">
                    <div class="form-group" style="border: 1px solid #dedede;padding: 4px;border-radius: 27px;width: 300px;margin: 3px 0 0 10px;">
                        <input type="text" class="col-md-11" style="border: none;" id="ProjectSearch_value" name="ProjectSearch_value" value="" placeholder="جستجو...">
                        <i class="zmdi zmdi-search" style="font-size: 17px;font-size: 20px;margin-top: 1px;float: right;cursor: pointer;color: #f80;" onclick="Project_Search()"></i>
                    </div>
                    <div class="form-group">
                        <label>چینش بر اساس :</label>
                        <select id="ProjectSort" class="form-control input-sm" style="width: 300px;margin: 3px 0 0 10px;">
                            <option value="0">---------------</option>
                            <option value="1">اولین به آخرین</option>
                            <option value="2">آخرین به اولین</option>
                            <option value="3">تاریخ صعودی</option>
                            <option value="4">تاریخ نزولی</option>
                            <option value="5">عنوان صعودی</option>
                            <option value="6">عنوان نزولی</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div><!-- end col-->
</div>
<div class="row m-b-10" id="List">

</div>
