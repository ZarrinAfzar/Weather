@using Weather.Data.Base;
@model List<Project>
@{
    if (Model.Count > 0)
    {
        foreach (var item in Model)
        {
            <div class="col-lg-4 m-t-5">
                <div class="card-box project-box projectCardBox" style="min-height: 205px;">
                    <div class="label btn-group m-b-10">
                        @{
                            if (User.IsInRole("AdminiStratore") || User.IsInRole("ProjectView"))
                            {
                                <button onclick="View(@item.Id)" data-toggle="tooltip" data-placement="top" title="" data-original-title="جزئیات" class="btn btn-primary btn-trans waves-effect"><i class="zmdi zmdi-eye"></i></button>
                            }
                            @*if (User.IsInRole("AdminiStratore") || User.IsInRole("ProjectSmsToStation"))
                                {
                                    <button onclick="SmsSetToStation(@item.Id)" data-toggle="tooltip" data-placement="top" title="" data-original-title="تقسیم پیامک" class="btn btn-primary btn-trans waves-effect"><i class="zmdi zmdi-comments"></i></button>
                                }*@
                            if (User.IsInRole("AdminiStratore") || User.IsInRole("ProjectSmsRequest"))
                            {
                                <button onclick="SmsRequest(@item.Id)" data-toggle="tooltip" data-placement="top" title="" data-original-title="شارژ پیامک" class="btn btn-primary btn-trans waves-effect"><i class="zmdi zmdi-comment-more"></i></button>
                            }
                            if (User.IsInRole("AdminiStratore") || User.IsInRole("ProjectDelete"))
                            {
                                <button onclick="Delete(@item.Id)" data-toggle="tooltip" data-placement="top" title="" data-original-title="حذف" class="btn btn-primary btn-trans waves-effect"><i class="zmdi zmdi-delete text-danger "></i></button>
                            }
                            if (User.IsInRole("AdminiStratore") || User.IsInRole("ProjectEdit"))
                            {
                                <button onclick="Edit(@item.Id)" data-toggle="tooltip" data-placement="top" title="" data-original-title="ویرایش" class="btn btn-primary btn-trans waves-effect"><i class="zmdi zmdi-edit"></i></button>
                            }
                        }
                    </div>
                    <h4 class="m-t-0 m-b-5"><a href="" class="text-inverse">@item.Name</a></h4>
                    <p class="text-primary text-uppercase m-b-5 font-13">@item.Code</p>
                    <p class="text-primary text-uppercase font-13">@item.InsertDate.ToPeString()</p>
                    <p class="text-muted font-13">
                        @item.Detail
                    </p>
                    <ul class="list-inline">
                        <li>
                            <h3 class="m-b-0">@item.Stations.Count</h3>
                            <p class="text-muted">ایستگاه ها</p>
                        </li>
                        <li>
                            <h3 class="m-b-0">@item.SmsCount</h3>
                            <p class="text-muted">پیامک ها</p>
                        </li>
                       
                    </ul>

                </div>
            </div>
        }
    }
    else
    {
        <h4 style="text-align:center;margin-top:20px;color:orangered">اطلاعاتی برای نمایش وجود ندارد</h4>
    }
}